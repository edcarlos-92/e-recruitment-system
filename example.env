# MacTech Recruitment System - Environment Variables
# Copy this file to .env.local and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/mactech_recruit

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# CLOUDINARY FILE UPLOAD
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM_NAME=MacTech Recruitment System

# ===========================================
# SMS CONFIGURATION (Optional)
# ===========================================
TXG_USER=your-sms-username
TXG_PASS=your-sms-password

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
FILE_UPLOAD_FOLDER=mactech_recruit
MAX_FILE_SIZE=10485760

# ===========================================
# SITE CONFIGURATION
# ===========================================
SITE_TITLE=MacTech Recruitment System
SITE_CURRENCY=GHC
VOUCHER_FEE=100

# ===========================================
# SECURITY SETTINGS
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CACHE CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id